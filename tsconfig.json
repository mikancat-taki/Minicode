{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020","DOM","DOM.Iterable"],
    "outDir": "dist/electron",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "sourceMap": true
  },
  "include": ["electron/**/*","web/src/**/*","src/**/*"]
}
