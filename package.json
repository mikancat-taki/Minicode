{
  "name": "minicode",
  "version": "1.0.0",
  "description": "Minicode デスクトップ版 (Electron)",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build": "electron-builder",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "author": "mikancat-taki",
  "license": "MIT",
  "devDependencies": {
    "@electron-forge/cli": "^7.4.0",
    "electron": "^31.0.0",
    "electron-builder": "^25.0.0"
  },
  "dependencies": {
    "path": "^0.12.7"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "./icon/icon"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "minicode"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
